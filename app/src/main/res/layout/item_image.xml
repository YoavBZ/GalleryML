<?xml version="1.0" encoding="utf-8"?>
<!-- A single cluster in the images grid -->
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:focusable="true"
		android:layout_height="match_parent">

	<ImageView
			android:id="@+id/cluster_thumbnail"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/media_gallery_placeholder"
			android:layout_margin="1dp"
			android:scaleType="centerCrop"/>

	<TextView
			android:id="@+id/cluster_size"
			android:layout_height="25dp"
			android:layout_width="wrap_content"
			android:minWidth="32dp"
			android:layout_alignEnd="@id/cluster_thumbnail"
			android:layout_alignTop="@id/cluster_thumbnail"
			android:gravity="center"
			android:background="#3b3b3b"
			android:textColor="#ffffff"/>

</RelativeLayout>