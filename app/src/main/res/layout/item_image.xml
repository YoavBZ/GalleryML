<?xml version="1.0" encoding="utf-8"?>
<!-- A single cluster in the images grid -->
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:focusable="true">

	<ImageView
			android:id="@+id/cluster_thumbnail"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/gallery_placeholder"
			android:layout_margin="1dp"
			android:scaleType="centerCrop"/>

	<TextView
			android:id="@+id/cluster_size"
			android:layout_height="23dp"
			android:layout_width="wrap_content"
			android:minWidth="26dp"
			android:layout_alignEnd="@id/cluster_thumbnail"
			android:layout_alignTop="@id/cluster_thumbnail"
			android:gravity="center"
			android:background="@drawable/round_background"
			android:textColor="#ffffff"
			android:alpha="0.75"/>

	<TextView
			android:id="@+id/timestamp"
			android:layout_height="23dp"
			android:layout_width="wrap_content"
			android:minWidth="85dp"
			android:layout_alignStart="@id/cluster_thumbnail"
			android:layout_alignTop="@id/cluster_thumbnail"
			android:gravity="center"
			android:background="@drawable/round_background"
			android:textColor="#ffffff"
			android:alpha="0.75"/>


</RelativeLayout>